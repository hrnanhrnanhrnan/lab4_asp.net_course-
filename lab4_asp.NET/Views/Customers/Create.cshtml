@model Models.Customer

<form asp-controller="Customers" method="post" asp-action="Create"
      class="mt-3">

    <div class="form-group">
        <label for="Name">Name</label>
        <input class="form-control" id="nameInput" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Address">Address</label>
        <input asp-for="Address" class="form-control" id="addressInput">
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" id="phoneNumberInput">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Create new Customer</button>
    <a class="btn btn-danger" asp-controller="Customers" asp-action="Index">Cancel</a>
</form>